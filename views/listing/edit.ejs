<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3 mb-3">
    <div class="col-8 offset-2">
      <h2>Edit Your Listings</h2>
      <form
        method="POST"
        action="/listings/<%=listing._id%>?_method=PUT"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            value="<%= listing.title %>"
            type="string"
            class="form-control"
            required
          />
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            type="string"
            class="form-control"
            required
          >
<%= listing.description %></textarea
          >
        </div>

        <div class="mb-2">
          Original Listing Image <br />
          <img src="<%= originalImageUrl %>" />
        </div>

        <div class="mb-3">
          <label for="title" class="form-label">Upload New Image</label>
          <input name="listing[image]" type="file" class="form-control" />
        </div>

        <!-- <div class="mb-3">
          <label for="title" class="form-label">Price</label>
          <input
            name="listing[price]"
            value="<%= listing.price %>"
            class="form-control"
            required
          />
        </div>

        <div class="mb-3">
          <label for="title" class="form-label"> Country</label>

          <input
            name="listing[Country]"
            value="<%= listing.country %>"
            type="string"
            class="form-control"
            required
          />
        </div> -->

        <div class="row">
          <div class="mb-2 col-md-4">
            <label for="price" class="form-label">Enter price</label>
            <input
              name="listing[price]"
              value="<%= listing.price %>"
              type="number"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Price should be valid</div>
          </div>

          <div class="mb-2 col-md-8">
            <label for="country" class="form-label">Enter country</label>
            <input
              name="listing[country]"
              value="<%= listing.country %>"
              type="text"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Country name should be valid</div>
          </div>
        </div>

        <div class="mb-3">
          <label for="title" class="form-label"> Location</label>
          <input
            name="listing[location]"
            value="<%= listing.location %>"
            type="string"
            class="form-control"
            required
          />
        </div>
        <button class="btn add-btn btn-dark offset-5">Edit Post</button>
      </form>
    </div>
  </div>
</body>
