<% layout("/layouts/boilerplate.ejs") %> <br /><br />
<div class="row">
  <div class="col-6 offset-3">
    <h2>Sign Up on WanderLust</h2>
    <br />
    <form method="POST" action="/signup" class="needs-validation" novalidate>
      <div class="mb-2">
        <label for="title" class="form-label"> Username </label>
        <input
          name="username"
          id="username"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Looks Good</div>
      </div>
        
      <div class="mb-2">
        <label for="title" class="form-label"> Email</label>
        <input
          name="email"
          id="email"
          type="text"
          class="form-control"
          required
        />
      </div>

      <div class="mb-2">
        <label for="title" class="form-label"> Password </label>
        <input
          name="password"
          id="password"
          type="password"
          class="form-control"
          required
        />
      </div>

    <Button class="btn btn-success"> SignUp</Button>
    </form>
  </div>
</div>
